<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anasayfa | Araç Kiralama</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.0.1/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.0.1/mapbox-gl.js"></script>
    <style>
        body { margin: 0; padding: 0; }
        .container-fluid { display: flex; padding: 0; }
        .left-container { flex: 7; padding: 15px; }
        .right-container { flex: 3; padding: 15px; }
        #map { position: relative; width: 100%; height: 100%; }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="left-container">
        <div class="jumbotron">
            <h1 class="display-4">Araç Kiralama</h1>
            <p class="lead">İstediğiniz zaman, istediğiniz yerden araç kiralayın.</p>
            <hr class="my-4">
            <form action="/Vehicle/Index" method="post" id="locationForm">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="pickupLocation">Teslim Alma Ofisi</label>
                        <select class="form-control" id="pickupLocation" name="pickupLocation">
                            <option value="">Ofis seçiniz</option>
                            @foreach (var office in Model)
                            {
                                <option value="@office.Name">@office.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="pickupDate">Alış Tarihi</label>
                        <input type="date" class="form-control" id="pickupDate" name="pickupDate">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="dropoffDate">İade Tarihi</label>
                        <input type="date" class="form-control" id="dropoffDate" name="dropoffDate">
                    </div>
                </div>

                <!-- Gizli inputlar konum bilgisi için -->
                <input type="hidden" id="latitude" name="latitude" value="">
                <input type="hidden" id="longitude" name="longitude" value="">

                <button type="button" class="btn btn-primary" onclick="getLocationAndSubmit()">Araç Bul</button>
            </form>
        </div>

        <div class="list-group">
            @foreach (var office in Model)
            {
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@office.Name</h5>
                        <small>20 km yakında</small>
                    </div>
                    <p class="mb-1">@office.Address</p>
                    <small>Telefon: @office</small>
                </a>
            }
        </div>
    </div>
    <div class="right-container">
        <div id="map"></div>
    </div>
</div>

<form asp-action="Logout" method="post" asp-controller="Account">
    <button type="submit" class="btn btn-link">Çıkış Yap</button>
</form>

<script>
    mapboxgl.accessToken = 'pk.eyJ1IjoieWFya2luYXRhYyIsImEiOiJjbGh6NWp0bXEwMmlwM2Z1bm5nem4yNWgzIn0.c_6W9rUun9qh1Q6GIcZBUA';
    const map = new mapboxgl.Map({
        container: 'map', 
        style: 'mapbox://styles/mapbox/streets-v11',
        center: [27.142826, 38.423733], 
        zoom: 4
    });

    const cities = [
        { name: 'İzmir Office', lng: 27.142826, lat: 38.423733 },
        { name: 'İstanbul Office', lng: 28.978359, lat: 41.008240 },
        { name: 'Ankara Office', lng: 32.859741, lat: 39.933365 }
    ];

    cities.forEach((city, index) => {
        new mapboxgl.Marker({ color: 'red' })
            .setLngLat([city.lng, city.lat])
            .setPopup(new mapboxgl.Popup().setHTML(`<h3>${city.name}</h3>`))
            .addTo(map);
    });

    function getLocationAndSubmit() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                document.getElementById('latitude').value = position.coords.latitude;
                document.getElementById('longitude').value = position.coords.longitude;
                document.getElementById('locationForm').submit();
            }, showError);
        } else { 
            alert("Geolocation is not supported by this browser.");
        }
    }

    function showError(error) {
        switch(error.code) {
            case error.PERMISSION_DENIED:
                alert("User denied the request for Geolocation.");
                break;
            case error.POSITION_UNAVAILABLE:
                alert("Location information is unavailable.");
                break;
            case error.TIMEOUT:
                alert("The request to get user location timed out.");
                break;
            case error.UNKNOWN_ERROR:
                alert("An unknown error occurred.");
                break;
        }
    }
</script>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.9.5/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
